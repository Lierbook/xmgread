<view class="{{(('uni-list-item')+' '+((disabled)?'uni-list-item--disabled':''))}}" hover-class="{{!clickable&&!link||disabled||showSwitch?'':'uni-list-item--hover'}}" data-event-opts="{{[['tap',[['onClick',['$event']]]]]}}" catchTap="__e"><block a:if="{{!isFirstChild}}"><view class="{{(('border--left')+' '+((border)?'uni-list--border':''))}}"></view></block><view class="{{((('uni-list-item__container')+' '+((showArrow||link)?'container--right':''))+' '+((direction==='column')?'flex--direction':''))}}"><block a:if="{{$slots.header}}"><slot name="header"></slot></block><block a:else><view class="uni-list-item__header"><block a:if="{{thumb}}"><view class="uni-list-item__icon"><image class="{{(('uni-list-item__icon-img')+' '+('uni-list--'+thumbSize))}}" src="{{thumb}}"></image></view></block><block a:else><block a:if="{{showExtraIcon}}"><view class="uni-list-item__icon"><uni-icons vue-id="1" color="{{extraIcon.color}}" size="{{extraIcon.size}}" type="{{extraIcon.type}}" onVueInit="__l"></uni-icons></view></block></block></view></block><block a:if="{{$slots.body}}"><slot name="body"></slot></block><block a:else><view class="{{(('uni-list-item__content')+' '+((thumb||showExtraIcon||showBadge||showSwitch)?'uni-list-item__content--center':''))}}"><block a:if="{{title}}"><text class="{{(('uni-list-item__content-title')+' '+(ellipsis!==0&&ellipsis<=2?'uni-ellipsis-'+ellipsis:''))}}">{{title}}</text></block><block a:if="{{note}}"><text class="uni-list-item__content-note">{{note}}</text></block></view></block><block a:if="{{$slots.footer}}"><slot name="footer"></slot></block><block a:else><block a:if="{{rightText||showBadge||showSwitch}}"><view class="{{(('uni-list-item__extra')+' '+((direction==='column')?'flex--justify':''))}}"><block a:if="{{rightText}}"><text class="uni-list-item__extra-text">{{rightText}}</text></block><block a:if="{{showBadge}}"><uni-badge vue-id="2" type="{{badgeType}}" text="{{badgeText}}" onVueInit="__l"></uni-badge></block><block a:if="{{showSwitch}}"><switch disabled="{{disabled}}" checked="{{switchChecked}}" data-event-opts="{{[['change',[['onSwitchChange',['$event']]]]]}}" onChange="__e"></switch></block></view></block></block></view><block a:if="{{showArrow||link}}"><uni-icons class="uni-icon-wrapper" vue-id="3" size="{{16}}" color="#bbb" type="arrowright" onVueInit="__l"></uni-icons></block></view>