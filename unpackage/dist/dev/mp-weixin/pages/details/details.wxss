.box .top {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.box .top .top-but {
    width: 100%;
}
.box .top .top-but button {
      display: inline;
      width: 120rpx;
      height: 50rpx;
      color: #777777;
      margin: 0 3rpx;
}
.box .top .top-but .active:hover {
      color: red;
      background: pink;
}
.box .below {
  background: #f5f5f5;
}
.box .below .below-box {
    height: 300rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.box .below .below-box .below-left {
      width: 30%;
      height: 300rpx;
      float: left;
}
.box .below .below-box .below-right {
      width: 70%;
      height: 300rpx;
      float: right;
      color: #777777;
      box-sizing: border-box;
      padding: 5rpx;
}
.box .below .below-box .below-right text {
        font-size: 38rpx;
}
.box .below .below-box .below-right .text {
        margin: 20rpx 0rpx;
        display: block;
        height: 72rpx;
        font-size: 26rpx;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
}
.box .below .below-box .below-right .text-l {
        font-size: 26rpx;
        color: #C8C7CC;
}
.box .below .below-box .below-right .text-r {
        padding: 3rpx 20rpx;
        font-size: 26rpx;
        border: 1rpx solid #C8C7CC;
        float: right;
}

