.pics {
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.pics .left {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    width: 150rpx;
    height: 100%;
}
.pics .left view {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      height: 60px;
      line-height: 60px;
      color: #333;
      text-align: center;
      font-size: 30rpx;
      border-top: 1px solid #eee;
}
.pics .left .active {
      border-left: 2px solid red;
      background: #f5f5f5;
}
.pics .right {
    background: #f5f5f5;
    width: 600rpx;
    height: 100%;
    margin-left: 20rpx;
}
.pics .right .right-box {
      width: 25%;
      margin: 40rpx 2.4%;
      height: 190rpx;
      float: left;
      background: #F1F1F1;
}
.pics .right .right-box .right-boxs {
        border-radius: 10rpx;
        position: relative;
        background: #F8F8FF;
}
.pics .right .right-box .right-boxs text {
          border-radius: 10rpx 10rpx 0rpx 0rpx;
          display: inline-block;
          width: 100%;
          height: 20%;
          background: #FFFFFF;
}
.pics .right .right-box .right-boxs .img {
          text-align: center;
          position: absolute;
          left: 0rpx;
          top: 67rpx;
          line-height: 100%;
          box-sizing: border-box;
          width: 90%;
          height: 70%;
          margin: auto;
}
.pics .right .right-box .right-boxs .img image {
            width: 50%;
            height: 70%;
}

